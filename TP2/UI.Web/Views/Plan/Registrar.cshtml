@model List<Business.Entities.Especialidad>
@{
    ViewData["Title"] = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-2">Materias</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">Entidades</li>
    <li class="breadcrumb-item">Planes</li>
    <li class="breadcrumb-item active">Registrar</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-book me-1"></i> Nuevo Plan
    </div>
    <div class="card-body">
        <form action="@Url.Action("Registrar","Plan")" method="post">
            <div class="form-group">
                <label>Descripción</label>
                <input type="text" class="form-control" name="Descripcion" autocomplete="off" required />
            </div>

            <div class="form-group">
                <label>Especialidad</label>
                <select class="form-select" name="IDEspecialidad" aria-label="Elegir especialidad" required>
                    @foreach (Business.Entities.Especialidad esp in Model)
                    {
                        <option value="@esp.ID">@esp.Descripcion</option>
                        //
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a class="btn btn-warning" href="@Url.Action("Planes","Home")">Volver</a>

        </form>
    </div>
</div>

