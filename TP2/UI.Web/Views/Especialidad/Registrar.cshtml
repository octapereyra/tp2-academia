
@{
    ViewData["Title"] = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-2">Especialidades</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">Entidades</li>
    <li class="breadcrumb-item">Especialidades</li>
    <li class="breadcrumb-item active">Registrar</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-book me-1"></i> Nueva Especialidad
    </div>
    <div class="card-body">
        <form action="@Url.Action("Registrar","Especialidad")" method="post">
            <div class="form-group">
                <label>Descripción</label>
                <input type="text" class="form-control" name="Descripcion" autocomplete="off" required />
            </div>
        
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a class="btn btn-warning" href="@Url.Action("Especialidades","Home")">Volver</a>

        </form>
    </div>
</div>

