@model List<Business.Entities.Plan>
@{
    ViewData["Title"] = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-2">Comisiones</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">Entidades</li>
    <li class="breadcrumb-item">Comisiones</li>
    <li class="breadcrumb-item active">Registrar</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-chalkboard me-1"></i> Nueva Comisión
    </div>
    <div class="card-body">
        <form action="@Url.Action("Registrar","Comision")" method="post">
            <div class="form-group">
                <label>Año</label>
                <input type="number" class="form-control" name="AnioEspecialidad" autocomplete="off" required />
            </div>
            <div class="form-group">
                <label>Descripción</label>
                <input type="text" class="form-control" name="Descripcion" autocomplete="off" required />
            </div>
            <div class="form-group">
                <label>Plan</label>
                <select class="form-select" name="IDPlan" aria-label="Elegir plan" required>
                    @foreach (Business.Entities.Plan plan in Model)
                    {
                        <option value="@plan.ID">@plan.Descripcion</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a class="btn btn-warning" href="@Url.Action("Comisiones","Home")">Volver</a>

        </form>
    </div>
</div>


